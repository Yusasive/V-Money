# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vmonie
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/vmonie

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (for notifications)
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@domain.com
MAIL_PASS=your_email_password
MAIL_FROM=noreply@vmonie.com
MAIL_REPLY_TO=support@vmonie.com

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Admin Registration (for creating first admin)
ADMIN_REGISTRATION_UID=secure_admin_registration_key_change_this

# Security Configuration
ADMIN_ALLOWED_IPS=127.0.0.1,::1
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_REQUEST=10

# Database Configuration
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5